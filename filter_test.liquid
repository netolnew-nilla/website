{%- comment -%}
Home Page Template
{%- endcomment -%}

<!DOCTYPE html>
<html lang="en" class="{{site_bg}}">
  <head>
    {% include 'head_tags' %}
    {% render 'block_libraries', page: page %}

    {%- comment -%}Mapbox{%- endcomment -%}
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css" rel="stylesheet">
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js"></script>
    
    {%- comment -%}Mapbox Geocoder{%- endcomment -%}
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.min.js"></script>
    <link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.css" type="text/css">

    {%- comment -%}Loading Mapbox JS file{%- endcomment -%}
    <script src="/javascripts/mapbox.js"></script>
    
    {%- comment -%} Loading Map/Filter Stylesheet {% endcomment %}
    <link rel='stylesheet' href='/stylesheets/filter.css' type='text/css'>
    
    {%- comment -%} Loading Splash Page Event Listener {% endcomment %}
    <script src='/javascripts/splash_page_event_listener.js'></script>{% endcomment %}
        
  </head>

  <body class="{{page.type}} {{button_style}} {{image_style}} {{body_shadow}}">
    <header class="hd page-{{page.urlname}}">
    
       
      {% if site.data.display_topbar == true %}
        {% render 'topbar', site: site %}
      {% endif %}

      {% if page.data.header_text != blank %}
        {% render 'page_header', page: page, site: site %}
      {% endif %}

      {% render 'navbar', site: site, page: page, root: root %}
      
      {%- comment -%}Create map container and sidebar listing{%- endcomment -%}
        <div class='sidebar pad2'>Listing</div>
        <div id='map' class='map pad2'>Map</div>
  
    </header>

    <main>

      {%- comment -%}Mapbox div{%- endcomment -%}
      <div id='map' style='width: 75%; min-height: 100vh; float: right;'></div>
      
      {%- comment -%} Sidebar Container {%- endcomment -%}
      <div class='sidebar'>
        <div class='heading'>
          <h1> Filter Test Header</h1>
        </div>
        <div id='listings' class='listings'></div>
 
      </div>

      {%- comment -%}Iterate Blocks{%- endcomment -%}
      {% render 'edit_content', page: page, logged_in: logged_in %}
      {{ content_for_layout }}
      
    </main>
   
    {% render 'footer', site: site, page: page %}
    {% render 'footer_tags' %}
    
  </body>
</html>